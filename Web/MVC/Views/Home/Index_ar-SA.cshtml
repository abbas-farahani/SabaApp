@section Styles {
	<link rel="stylesheet" href="~/css/corporate/swiper.css">
}

@section Slider {
	<section id="slider" class="slider-element swiper_wrapper min-vh-40 min-vh-md-75" data-autoplay="9000" data-speed="800" data-loop="true" data-grab="false">
