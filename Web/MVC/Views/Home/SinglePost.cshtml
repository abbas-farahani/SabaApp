					<div id="comments">

						<h3 id="comments-title">@(Model.Comments != null && Model.Comments.Count() > 0 ? Html.Raw($"<span>{Model.Comments.Count()}</span> دیدگاه") : "بدون دیدگاه")</h3>

						<!-- Comments List
						============================================= -->
						@if (Model.Comments.Count() > 0)
						{
							<ol class="commentlist">
								@foreach (var comment in Model.Comments)
								{
									<li class="comment byuser comment-author-_smcl_admin even thread-odd thread-alt depth-1" id="li-comment-@comment.Id">

										<div id="comment-@comment.Id" class="comment-wrap">

											<div class="comment-meta">

												<div class="comment-author vcard">

													<span class="comment-avatar">
														<img alt='Image' src='https://1.gravatar.com/avatar/30110f1f3a4238c619bcceb10f4c4484?s=60&amp;d=http%3A%2F%2F1.gravatar.com%2Favatar%2Fad516503a11cd5ca435acc9bb6523536%3Fs%3D60&amp;r=G' class='avatar avatar-60 photo' height='60' width='60'>
													</span>

												</div>

											</div>

											<div class="comment-content">

												<div class="comment-author"><a href='@(Html.Raw(string.IsNullOrEmpty(comment.Website) ? "#": comment.Website))' rel='external nofollow' class='url'>@comment.UserName</a><span><a href="#" title="Permalink to this comment">@comment.CreationTime.ToString("dddd yyyy/MM/dd HH:mm")</a></span></div>

												<p>@Html.Raw(comment.Content)</p>

												<a class='comment-reply-link' href='#'><i class="bi-reply-fill"></i></a>

											</div>

											<div class="clear"></div>

										</div>

									</li>
								}
							</ol>
							<!-- .commentlist end -->
							<div class="clear"></div>
						}

						<!-- Comment Form
						============================================= -->
						<div id="respond">

							@if (Model.CommentStatus == 0)
							{
								// Close Comment
								Html.Raw("<p>امکان ثبت دیدگاه وجود ندارد.</p>");
							}
							else
							{
								// Private Comment
								if (Model.CommentStatus == 2 && !User.Identity.IsAuthenticated)
								{
									Html.Raw("<p>برای ثبت دیدگاه وارد/عضو شوید.</p>");
								}
								else
								{
									<h3><span>دیدگاه</span> خود را ثبت کنید</h3>

									<form class="row" asp-action="create" asp-controller="comment" asp-area="admin" method="post" id="commentform">
										@if (User.Identity.IsAuthenticated)
										{
											<input type="hidden" name="userName" id="userName" value="@User.Identity.Name" class="form-control" />
										}
										<input type="hidden" name="postId" id="postId" value="@Model.Id" class="form-control" />
										<input type="hidden" name="parentId" id="parentId" class="form-control" />
										@if (Model.CommentStatus == 1 && !User.Identity.IsAuthenticated)
										{
											<div class="col-md-4 form-group">
												<label for="name" class="required">نام<small>*</small></label>
												<input type="text" name="name" id="name" value="" size="22" tabindex="1" class="form-control">
											</div>

											<div class="col-md-4 form-group">
												<label for="email">پست الکترونیک</label>
												<input type="email" name="email" id="email" value="" size="22" tabindex="2" class="form-control">
											</div>

											<div class="col-md-4 form-group">
												<label for="website">وب سایت</label>
												<input type="url" name="website" id="website" value="" size="22" tabindex="3" class="form-control">
											</div>

											<div class="w-100"></div>
										}

										<div class="col-12 form-group">
											<label for="content">متن دیدگاه</label>
											<textarea name="content" id="content" cols="58" rows="7" tabindex="4" class="form-control"></textarea>
										</div>

										<div class="col-12 form-group">
											<button name="submit" type="submit" id="submit-button" tabindex="5" value="Submit" class="button button-3d m-0">ارسال پیام</button>
										</div>
									</form>
								}
							}

						</div><!-- #respond end -->

					</div><!-- #comments end -->

				</div>

