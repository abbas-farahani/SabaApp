				</div>

				<div class="primary-menu-trigger">
					<button class="cnvs-hamburger" type="button" title="Open Mobile Menu">
						<span class="cnvs-hamburger-box"><span class="cnvs-hamburger-inner"></span></span>
					</button>
				</div>

				<!-- Primary Navigation
				============================================= -->
				<nav class="primary-menu">

					<ul class="menu-container">
						<li class="menu-item">
							<a class="menu-link" href="/"><div>@SharedResources.Home</div></a>
						</li>
						<li class="menu-item">
							<a class="menu-link" href="/about-us"><div>@SharedResources.AboutUs</div></a>
						</li>
						<li class="menu-item">
							<a class="menu-link" href="/products"><div>@SharedResources.Products</div></a>
						</li>
						<li class="menu-item">
							<a class="menu-link" href="/quality-assurance"><div>@SharedResources.QualityAssurance</div></a>
						</li>
						<li class="menu-item">
							<a class="menu-link" href="/target-markets"><div>@SharedResources.TargetMarkets</div></a>
						</li>
						<li class="menu-item">
							<a class="menu-link" href="/why-us"><div>@SharedResources.WhyUs</div></a>
						</li>
						<li class="menu-item">
							<a class="menu-link" href="/contact-us"><div>@SharedResources.ContactUs</div></a>
						</li>
						<li class="menu-item">
							<a class="menu-link" href="/faq"><div>@SharedResources.FAQ</div></a>
						</li>

						@if (User.Identity.IsAuthenticated)
						{
							<li class="menu-item">
								<a class="menu-link" href="#"><i class="bi-emoji-sunglasses"></i></a>
								<ul class="sub-menu-container">
									<li class="menu-item">
										<a class="menu-link" asp-action="index" asp-controller="dashboard" asp-area="dashboard">
											<div><i class="uil uil-dashboard"></i>@SharedResources.Dashboard</div>
										</a>
									</li>
									@if (User.IsInRole("Admin"))
									{
										<li class="menu-item">
											<a class="menu-link" asp-area="admin" asp-controller="home" asp-action="index">
												<div><i class="uil uil-user-md"></i>@SharedResources.Admin</div>
											</a>
										</li>
									}
									<li class="menu-item">
										<a href="#" class="menu-link logout-btn">
											<div><i class="bi-door-open"></i>@SharedResources.Exit</div>
										</a>
										<form asp-area="dashboard" asp-controller="dashboard" asp-action="logout" method="post" class="logout-form py-0 d-none">
											<a href="#" type="submit" class="menu-link">
												<div><i class="bi-door-open"></i>@SharedResources.Exit</div>
											</a>
										</form>
									</li>
								</ul>
							</li>
						}
						else
						{
							<li class="menu-item">
								<a asp-action="login" asp-controller="dashboard" asp-area="dashboard" class="menu-link"><i class="uil uil-user"></i></a>
							</li>
						}

						@await Component.InvokeAsync("LanguageSwitcher")

					</ul>

				</nav><!-- #primary-menu end -->

				<form class="top-search-form" action="search.html" method="get">
					<input type="text" name="q" class="form-control" value="" placeholder="Type &amp; Hit Enter.." autocomplete="off">
				</form>

			</div>
		</div>
	</div>
	<div class="header-wrap-clone"></div>
</header><!-- #header end -->