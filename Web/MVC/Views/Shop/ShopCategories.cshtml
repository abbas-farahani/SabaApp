@model List<Core.Domain.Entities.Shop.ProductCat>

<div class="content-wrap">
	<div class="container">
		@if (Model != null && Model.Count() > 0)
		{
			<div class="row col-mb-50">
				@foreach (var category in Model)
				{
					<div class="col-md-12 col-lg-3">
						<div class="promo promo-border text-center promo-mini p-5">
							<div class="row align-items-center">
								<div class="col-12">
									<h3>@Html.Raw(category.Label)</h3>
								</div>
								<div class="col-12 mt-4">
									<a asp-action="shopcategory" asp-controller="shop" asp-route-slug="@category.Slug" class="button button-black button-circle button-rounded m-0">مشاهده محصولات</a>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		}
	</div>
</div>