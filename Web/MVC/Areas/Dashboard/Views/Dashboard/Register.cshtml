@model RegisterVM
@{
    Layout = "_LayoutLogin";
}

<div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
    <div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
        <form class="form w-100" method="post" asp-action="register" asp-controller="dashboard">
            <div class="text-center mb-11">
                <h1 class="text-gray-900 fw-bolder mb-3">عضویت</h1>
                <div class="text-gray-500 fw-semibold fs-6">عضویت با شبکه اجتماعی</div>
            </div>
            <div class="row g-3 mb-9">
                <div class="col-md-6">
                    <a href="#" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                        <img alt="Logo" src="~/media/svg/brand-logos/google-icon.svg" class="h-15px me-3" />ورود با گوگل
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="#" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                        <img alt="Logo" src="~/media/svg/brand-logos/apple-black.svg" class="theme-light-show h-15px me-3" />
                        <img alt="Logo" src="~/media/svg/brand-logos/apple-black-dark.svg" class="theme-dark-show h-15px me-3" />ورود با اپل
                    </a>
                </div>
            </div>
            <div class="separator separator-content my-14">
                <span class="w-125px text-gray-500 fw-semibold fs-7">یا عضویت با ایمیل</span>
            </div>
            <div asp-validation-summary="ModelOnly" class="fv-row text-danger">@Html.ValidationSummary().ToString()</div>
            <div class="fv-row mb-8">
                <input asp-for="UserName" type="text" placeholder="@Html.DisplayNameFor(m => m.UserName)" autocomplete="off" class="form-control bg-transparent" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="fv-row mb-8">
                <input asp-for="Email" type="email" placeholder="@Html.DisplayNameFor(m => m.Email)" autocomplete="off" class="form-control bg-transparent" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="fv-row mb-8">
                <input asp-for="Phone" type="tel" placeholder="@Html.DisplayNameFor(m => m.Phone)" autocomplete="off" class="form-control bg-transparent" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="fv-row mb-8" data-kt-password-meter="true">
                <div class="mb-1">
                    <div class="position-relative mb-3">
                        <input asp-for="Password" type="password" placeholder="@Html.DisplayNameFor(m => m.Password)" class="form-control bg-transparent" autocomplete="off" />
                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                            <i class="ki-duotone ki-eye-slash fs-2"></i>
                            <i class="ki-duotone ki-eye fs-2 d-none"></i>
                        </span>
                    </div>
                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                    </div>
                </div>
                <div class="text-muted">حداقل از 8 کاراکتر شامل عدد، نماد، حروف بزرگ و کوچک استفاده کنید</div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="fv-row mb-8">
                <input asp-for="RePassword" type="password" placeholder="@Html.DisplayNameFor(m => m.RePassword)" autocomplete="off" class="form-control bg-transparent" />
            </div>
            <div class="fv-row mb-8">
                <label class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="toc" value="1" />
                    <span class="form-check-label fw-semibold text-gray-700 fs-base ms-1">
                        <a href="#" class="ms-1 link-primary">قوانین</a> وب سایت مورد تایید است
                    </span>
                </label>
            </div>
            <div class="d-grid mb-10">
                <button type="submit" id="kt_sign_up_submit" class="btn btn-primary">
                    <span class="indicator-label">عضویت</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
            <div class="text-gray-500 text-center fw-semibold fs-6">
                حساب دارید؟
                <a asp-area="dashboard" asp-controller="dashboard" asp-action="login" class="link-primary fw-semibold">ورود به حساب کاربری</a>
            </div>
        </form>
    </div>
    <partial name="partialviews/_loginfooterpv" />
</div>
