@model ConfirmMobileVM
@{
	Layout = "_LayoutLogin";
}

<div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
	<div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
		<form class="form w-100" method="post" asp-action="confirmphone" asp-controller="dashboard" asp-area="dashboard">
			<div class="text-center mb-10">
				<h1 class="text-gray-900 fw-bolder mb-3">تایید شماره تلفن</h1>
				<div class="text-gray-500 fw-semibold fs-6">برای شماره تلفن، کد پیامک شده را وارد کنید</div>
			</div>
			<div class="fv-row mb-8">
				<input asp-for="Phone" type="hidden" />
				<input asp-for="Code" placeholder="@Html.DisplayNameFor(m => m.Code)" autocomplete="off" class="form-control bg-transparent" />
			</div>
			<div class="d-flex flex-wrap justify-content-center pb-lg-0">
				<button type="submit" id="kt_password_reset_submit" class="btn btn-primary me-4">
					<span class="indicator-label">ارسال</span>
					<span class="indicator-progress">منتظر بمانید...
					<span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
				</button>
				<a href="/dashboard" class="btn btn-light">انصراف</a>
			</div>
		</form>
	</div>
	<partial name="partialviews/_loginfooterpv" />
</div>
