@model LoginVM
@{
	Layout = "_LayoutLogin";
	string returnUrl = ViewBag.ReturnUrl;
}

<div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
	<div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
		@if (ViewBag.LoginWithPhone != null && (bool)ViewBag.LoginWithPhone)
		{

		}
		else
		{
			<form class="form w-100" action="login" method="post">
				@if (ViewBag.LoginWithSocial != null && (bool)ViewBag.LoginWithSocial)
				{
					<div class="text-center mb-11">
						<h1 class="text-gray-900 fw-bolder mb-3">ورود به حساب کاربری</h1>
						<div class="text-gray-500 fw-semibold fs-6">ورود از طریق شبکه اجتماعی</div>
					</div>
					<div class="row g-3 mb-9">
						@if (ViewBag.LoginWithGoogle != null && (bool)ViewBag.LoginWithGoogle)
						{
							<div class="col-md-6">
								<a href="#" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
									<img alt="Logo" src="~/media/svg/brand-logos/google-icon.svg" class="h-15px me-3" />ورود با حساب گوگل
								</a>
							</div>
						}
						<div class="col-md-6">
							<a href="#" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
								<img alt="Logo" src="~/media/svg/brand-logos/apple-black.svg" class="theme-light-show h-15px me-3" />
								<img alt="Logo" src="~/media/svg/brand-logos/apple-black-dark.svg" class="theme-dark-show h-15px me-3" />ورود با اپل
							</a>
						</div>
					</div>
					<div class="separator separator-content my-14">
						<span class="w-200px mw-250px text-gray-500 fw-semibold fs-7">@SharedResources.OAuthLabel</span>
					</div>
				}
				<div asp-validation-summary="ModelOnly" class="fv-row text-danger"></div>

				<div class="fv-row mb-8">
					<input asp-for="UserName" type="text" placeholder="@SharedResources.UserName" autocomplete="off" class="form-control bg-transparent" />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
				<div class="fv-row mb-3">
					<input asp-for="Password" type="password" placeholder="@SharedResources.UserName" autocomplete="off" class="form-control bg-transparent" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="fv-row mb-3">
					<label asp-for="RememberMe" class="control-label">@SharedResources.RememberMe</label>
					<input asp-for="RememberMe" type="checkbox" class="form-check bg-transparent" />
				</div>
				<div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
					<div></div>
					<a asp-area="dashboard" asp-controller="dashboard" asp-action="resetpassword" class="link-primary">رمز عبورم را فراموش کردم</a>
				</div>
				<div class="d-grid mb-10">
					<button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
						<span class="indicator-label">ورود</span>
						<span class="indicator-progress">
							لطفا صبر کنید....
							<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
						</span>
					</button>
				</div>
				@if ((bool)ViewBag.AllowRegistration)
				{
					<div class="text-gray-500 text-center fw-semibold fs-6">
						حساب کاربری ندارید؟
						<a asp-area="dashboard" asp-controller="dashboard" asp-action="register" class="link-primary">عضویت</a>
					</div>
				}
			</form>
		}

	</div>
	<partial name="partialviews/_loginfooterpv" />
</div>