@{
    bool isRTL = CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    string lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}
<!DOCTYPE html>
<html dir="@(isRTL? "rtl" :"ltr")" direction="@(isRTL? "rtl" :"ltr")" lang="@lang">
<head>
    <title>@(Html.Raw(await _optionService.GetByName("SiteName")) ?? ViewData["Title"])</title>
    <meta charset="utf-8" />
    <meta name="description" content="@Html.Raw(await _optionService.GetByName("SiteDescription"))" />
    <meta name="keywords" content="@Html.Raw(await _optionService.GetByName("SeoKeywords"))" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:locale" content="@Html.Raw(await _optionService.GetByName("SeoOgLocale"))" />
    <meta property="og:type" content="@Html.Raw(await _optionService.GetByName("SeoOgType"))" />
    <meta property="og:title" content="@Html.Raw(await _optionService.GetByName("SeoOgTitle"))" />
    <meta property="og:url" content="@Html.Raw(await _optionService.GetByName("SeoOgUrl"))" />
    <meta property="og:site_name" content="@Html.Raw(await _optionService.GetByName("SeoOgSiteName"))" />
    <link rel="shortcut icon" href="@Html.Raw(await _optionService.GetByName("SiteFavIcon"))" />
    <link href="~/DashboardStatic/lib/global/plugins.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/css/dashboard/style.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script>// Frame-busting to prevent site from being loaded within a frame without permission (click-jacking) if (window.top != window.self) { window.top.location.replace(window.self.location.href); }</script>
</head>
<body id="kt_body" class="auth-bg bgi-size-cover bgi-attachment-fixed bgi-position-center">
    <script>var defaultThemeMode = "light"; var themeMode; if (document.documentElement) { if (document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if (localStorage.getItem("data-bs-theme") !== null) { themeMode = localStorage.getItem("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>
    <div class="d-flex flex-column flex-root">
        <style>
            body {
                background-image: url('/media/auth/bg10.jpeg');
            }

            [data-bs-theme="dark"] body {
                background-image: url('/media/auth/bg10-dark.jpeg');
            }</style>
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <div class="d-flex flex-lg-row-fluid">
                <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
                    <img class="theme-light-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/media/auth/agency.png" alt="" />
                    <img class="theme-dark-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/media/auth/agency-dark.png" alt="" />
                    <h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7">دسترسی به امکانات نامحدود</h1>
                    <div class="w-25 text-gray-600 fs-base text-center fw-semibold">
                        <p>با عضویت در وب سایت به تمامی امکانات متنوع این سایت دسترسی کامل خواهید داشت. لذت استفاده از خدمات ارائه شده در این وب سایت را از دست ندهید و به دوستان خود نیز معرفی کنید تا آنها هم از این امکانات بهره‌مند شوند.</p>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
                <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-10">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/DashboardStatic/lib/global/plugins.bundle.js"></script>
    <script src="~/js/dashboard/scripts.bundle.js"></script>
    @*<script src="~/js/dashboard/custom/authentication/sign-in/general.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("~/Views/Shared/PartialViews/_ConfirmationMessagePV.cshtml")
</body>
</html>