@using MVC.Models.ViewModels.Role
@model UserVM
@{
    ViewData["Title"] = "Edit User";
    var roles = ViewBag.Roles as List<RolesVM>;
    var userRoles = ViewBag.UserRoles as List<string>;
}

<h1>EditUser</h1>

<form asp-controller="user" asp-action="edit" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="control-label" asp-for="UserName"></label>
        <input class="form-control" asp-for="UserName" />
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
    </div>

    <div class="form-group">
        @foreach (var role in roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" @((userRoles.Contains(role.roleName)) ? "checked" : "") name="SelectedRoles" value="@role.roleName">
                <label class="form-check-label">@role.roleName</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Avatar"></label>
        <input class="form-control" asp-for="Avatar" />
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Province"></label>
        <input class="form-control" asp-for="Province" />
    </div>

    <input type="hidden" asp-for="Id" />

    <button class="btn btn-primary" type="submit">Submit</button>
</form>
