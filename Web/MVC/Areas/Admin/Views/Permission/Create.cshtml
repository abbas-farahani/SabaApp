@model AddPermissionVM

<div class="card card-flush h-xl-100">
	<div class="card-header pt-5">
		<h3 class="card-title align-items-start flex-column">
			<span class="card-label fw-bold text-gray-800">@ViewData["Title"]</span>
			<span class="text-gray-500 pt-2 fw-semibold fs-6">مدیریت دسترسی‌ها</span>
		</h3>
		<div class="card-toolbar">
		</div>
	</div>
	<div class="card-body d-flex justify-content-between flex-column py-3">
		<div class="m-0"></div>
		<form asp-action="create" class="create-permission sluggable">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="fv-row mb-8">
				<label asp-for="Name" class="d-flex align-items-center fs-6 fw-semibold form-label mb-2"></label>
				<span class="ms-1" data-bs-toggle="tooltip" title="@Html.DisplayNameFor(model => model.Name)">
					<i class="ki-outline ki-information-5 text-gray-500 fs-6"></i>
				</span>
				<input asp-for="Name" class="form-control form-control-solid" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="fv-row mb-8">
				<label asp-for="Description" class="d-flex align-items-center fs-6 fw-semibold form-label mb-2"></label>
				<textarea asp-for="Description" class="form-control form-control-solid" rows="3" placeholder="@Html.DisplayNameFor(Model => Model.Description)"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="ایجاد دسترسی" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
